<resources>
    <!-- Base application theme. -->
    <style name="Theme.TPConverter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/accent</item>
        <!-- Status bar color. -->
    </style>

    <style name="Theme.TPConverter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TPConverter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TPConverter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>